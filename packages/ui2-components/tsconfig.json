{
  "compilerOptions": {
    "target": "ES5",
    "module": "ESNext",
    "jsx": "react",
    "strict": true,
    "esModuleInterop": true,
    "allowJs": true,
    "skipLibCheck": true,
    "lib": [ "DOM", "DOM.Iterable", "ESNext" ],
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "baseUrl": "src",
    "declaration": true,
    "declarationDir": "build",
    "rootDir": "src",
    "outDir": "build",
    "types": [
      "node",
      "webpack-env"
    ],
    "paths": {
      "@components/*": [ "components/*" ]
    }
  },
  "exclude": [ "node_modules", "build" ],
  "include": [ "**/*.ts", "**/*.tsx" ]
}
